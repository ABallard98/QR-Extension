{
  "manifest_version": 2,
 
  "name": "Scannr",
  "description": "This extension will produce a QR code of the current page.",
  "version": "1.0",

  "background":{
	  "scripts": ["background.js"],
	  "persistent": true
  },
 
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}